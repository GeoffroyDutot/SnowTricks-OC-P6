{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Reset Password{% endblock %}

{% block body %}
    <div class="h-full mt-24 flex justify-center items-center">
        <div class="form w-full max-w-md bg-white flex flex-col py-5 px-8 rounded-lg shadow-lg">
            <h1 class="text-center text-3xl font-extrabold text-gray-900">Reset password</h1>
            {{ form_start(resetPasswordForm) }}

            <div class="group-inputs flex flex-col px-8 py-4 space-y-4">
                <label for="username">Username</label>
                <input id="username" type="text" value="{{ user.username }}" class="form-control border border-gray-300 text-gray-900 rounded hover:shadow focus:outline-none focus:bg-gray-100 focus:bg-opacity-50 focus:border-gray-400 py-2 px-4 disabled:opacity-25 cursor-not-allowed" disabled>
                {{ form_label(resetPasswordForm.newPassword) }}
                {{ form_widget(resetPasswordForm.newPassword) }}
                <span class="text-red-500">{{ form_errors(resetPasswordForm.newPassword) }}</span>
            </div>

            <div class="sign-in-btn flex justify-center">
                <button type="submit" class="items-center text-center border-b-4 px-4 py-2 mx-2 bg-gray-100 border-gray-300 text-black rounded hover:shadow-md focus:outline-none">Send email</button>
            </div>
            {{ form_end(resetPasswordForm) }}
        </div>
    </div>
{% endblock %}

